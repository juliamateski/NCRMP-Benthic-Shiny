print("SEFCRI Coral Cover Significance")
NCRMP_perform_ttest(dataframe = SEFL_Cvr,
                           metric1 = 'coral_cover',
                           metric2 = 'avCvr',
                           alpha = 0.05,
                           n_years = 4,
                           return_dataframe = FALSE)
print("")
print("SEFCRI Macroalgal Significance")
NCRMP_perform_ttest(dataframe = SEFL_Cvr, 
                           metric1 = 'macroalgae_cover',
                           metric2 = 'avCvr',
                           alpha = 0.05,
                           n_years = 4,
                           return_dataframe = FALSE)
