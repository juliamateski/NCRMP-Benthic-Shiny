    #     ),
    #     #"-",
    #   format(
    #     x = round(bin_width + min + (bin_width * (num_vec-1))+1,small),
    #     nsmall = small
    #   ),
    #   sep = "-"
    #   )
    lab_vec <- c("  4- 10", " 11-15", " 16-20", " 21-25", " 26-30", " 31-35", " 36-45", " 46-65", " 66-85", " 86-105", "106+")
 

   
